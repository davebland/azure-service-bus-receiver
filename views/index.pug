doctype html
html(lang='en')
  head
    title ASBR
    link(href='css/index.css' rel='stylesheet')
    script(src="js/socket.js")
  body
    h1 Azure Service Bus Receiver
    each sub, index in subscriptions
      div
        div.grid
          div.sub-details
              p= 'Subscription: ' + sub.SUBSCRIPTION_NAME
              p= 'Topic: ' + sub.TOPIC_NAME
          div
            div.stream-container(id=sub.SUBSCRIPTION_NAME)
          div
    each q, index in queues
      div
        div.grid
          div.sub-details
              p= 'Queue: '
                strong= q.QUEUE_NAME
          div
            div.stream-container(id=q.QUEUE_NAME)
          div
